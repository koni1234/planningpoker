{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "Modules/*": ["src/modules/*"],
      "Pipes/*": ["src/pipes/*"],
      "Graphql": ["src/graphql.ts"]
    },
    "incremental": true,
    "skipLibCheck": true
  }
}
